<div class="banner" style="background-image: url('<%= cl_image_path @cocktail.photo.key%>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-sm p-2">
      <ul>
      <h3>description</h3>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= "#{dose.ingredient.name} - #{dose.description.capitalize} " %>
            <%= link_to(content_tag(:i, nil, class: "fas fa-trash-alt"), dose_path(id: dose.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'ml-3 text-danger') %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm p-4">
      <h2>Ingredient:</h2>

      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.input :description, as: :text %>
        <%= f.association :ingredient %>
        <%= f.submit "Add ingredient", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
